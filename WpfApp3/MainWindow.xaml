<Window x:Class="WpfApp3.MainWindow"
    
        
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="720" Width="1280">

    <Grid>
        <ScrollViewer Margin="859,0,0,0">
            <WrapPanel x:Name="grid" Width="400" HorizontalAlignment="Right" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        </ScrollViewer>
        <Button x:Name="Button_ChooseFolder" Content="Choose Folder..." HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="108" Click="Button_ChooseFolder_Click"/>
        <Label x:Name="Label_FilePath" HorizontalAlignment="Left" Height="23" Margin="118,10,0,0" VerticalAlignment="Top" Width="233" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        <Image HorizontalAlignment="Left" Height="207" Margin="18,61,0,0" VerticalAlignment="Top" Width="333" RenderTransformOrigin="0.5,0.5"/>
        <Image x:Name="Image_LargePreview" HorizontalAlignment="Left" Height="596" Margin="10,49,0,0" VerticalAlignment="Top" Width="758" Stretch="Fill" />
    </Grid>


</Window>